@model PhoneDirectory.ViewModels.PhoneNumberFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "PhoneNumber"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber.Details)
        @Html.TextBoxFor(m => m.PhoneNumber.Details, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PhoneNumber.Details)
    </div>  
    @Html.HiddenFor(m => m.PhoneNumber.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}